@model IEnumerable<GlobalSegurosPrueba.Models.Tienda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tiendas</h2>
<div class="container-fluid mb-2">
    <div class="row">
        <div class="col-md-3 d-flex justify-content-around">
            @Html.ActionLink("Create Tienda", "Create", null, new { @class = "btn btn-dark" })
            @Html.ActionLink("Empleados", "Index", "Empleado", null, new { @class = "btn btn-dark" })

        </div>

    </div>
</div>

<table class="table">
    <tr>
        <th>
            Nombre Tienda
        </th>
        <th>
            Direccion
        </th>
        <th>
            Telefono
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreTienda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
