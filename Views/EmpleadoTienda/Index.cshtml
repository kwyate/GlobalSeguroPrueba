@model IEnumerable<GlobalSegurosPrueba.Models.Empleado_Tienda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Programar empleado</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 d-flex justify-content-around">
            @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-dark" })
            @Html.ActionLink("Cargos", "Index", "Cargo", null, new { @class = "btn btn-dark" })
            @Html.ActionLink("Tiendas", "Index", "Tienda", null, new { @class = "btn btn-dark" })
            @Html.ActionLink("Empleados", "Index", "Empleado", null, new { @class = "btn btn-dark" })

        </div>

    </div>
</div>
<table class="table">
    <tr>
        <th>
            Fecha 
        </th>
        <th>
            Empleado
        </th>
        <th>
            Tienda
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado1.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tienda1.nombreTienda)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
